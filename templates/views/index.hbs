{{!
< default}} <section class="page-home">
	<section class="banner bg-cover">
		<div class="container">
			<div class="w-medium mx-auto">
				<h1>FIND YOUR DREAM UNIVERSITY ABROAD</h1>
				<h3 class="lead">Study abroad with our
					<strong>free</strong> resources on choosing a university</h3>

				<form method="GET" action="/search/" role="search" class="search-form">
					<label>
						<input type="text" class="form-control form-control-lg" placeholder="Type an university..." name="q">
					</label>
					<button class="btn btn-lg btn-primary" type="submit">
						Discover Universities
					</button>
				</form>
			</div>
		</div>
	</section>

	<section class="container study-locations">
		<h2>Where do I study?</h2>
		<p class="lead mb-4">Study abroad destinations</p>
		<div class="row">
			{{# each data.studyIn}}
			<div class="col-md-6">
				<div class="wrap">
					<div class="row">
						<div class="col-md-5">
							<a href="{{studyDestinationtUrl slug}}">
								<div class="thumbnail bg-cover text-hide img-lazy" style="background-image:url(/images/country/{{country.countryCode}}.jpg)">
									{{ name }}
								</div>
							</a>
						</div>
						<div class="col-md-7">
							<div class="copy">
								<h3>
									<a href="{{studyDestinationtUrl slug}}">{{ name }}</a>
								</h3>
								{{{ brief}}}
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</section>

	<section class="articles dark-bg no-mb">
		<div class="container">
			<a href="/blog/" class="float-right">All articles</a>
			<h2>Latest Articles</h2>
			<p class="lead mb-4">Helpful articles to make your study abroad journey even more simpler</p>
			<div class="row">
				{{#each data.articles}}
				<div class="col-md-4">
					<article>
						<header>
							<h3>
								<a href="{{postUrl slug}}">{{title}}</a>
							</h3>
						</header>
						<p>{{ meta.description }}</p>
					</article>
				</div>
				{{/each}}
			</div>
		</div>
	</section>

	<section class="levels">
		<div class="container">
			{{!-- <h2>Study abroad Levels</h2> --}}
			<div class="row">

				{{#each data.levels}}
				<div class="col-md-6">
					<h3>{{name}}</h3>
					{{{description}}}
				</div>
				{{/each}}
			</div>
		</div>
	</section>

	<section class="tests container">
		<h2>Standardized Tests</h2>
		<p class="lead mb-4">Language and admission tests explained</p>
		<div class="row">
			{{#each data.tests }}
			<div class="col-md-4">
				<div class="test-block rounded bg-white">
					<a href="{{testUrl slug}}" title="{{meta.title}}">
						<img class="card-img-top" src="/images/tests/{{lowercase name }}_logo.jpg" alt="{{name}}">
					</a>
					<p>{{ meta.description }}</p>
				</div>
			</div>
			{{/each}}
		</div>
	</section>
	</section>