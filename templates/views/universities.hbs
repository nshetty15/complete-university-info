<div class="container">
  <h1>Universities</h1>
  <h4 class="text-weight-normal">Total {{ data.universities.total}} Universities.</h4>
  <div class="row">
    <div class="col-md-8 col-lg-8">
      <div class="row">
         {{!-- {{data.universities.results}}  --}}
        {{# each data.universities.results}}
        <div class="col-md-4 col-lg-4">
          {{!-- <h1>{{universityUrl}}/{{filters.category}}/{{ slug }}</h1> --}}
          <h2><a href="{{ universityUrl categories.0.key slug }}">{{{title}}}</a></h2>
          {{#if image}}
          <img src="{{{cloudinaryUrl image width=160 height=160 crop=" fit "}}}" class="thumbnail"> 
          {{/if}}
        </div>
        {{/each}}
      </div>
    </div>

     <div class="col-sm-4 col-md-3">
			<h2>By Country</h2>
			<div style="margin-top: 70px;" class="list-group">
				<a href="/universities" class="active list-group-item">All Categories</a>
				{{# each data.categories }}
        {{!-- https://stackoverflow.com/questions/8853396/logical-operator-in-a-handlebars-js-if-conditional --}}
          {{#checkIf  countryCode '==' 'US' '||' countryCode '==' 'CA' }}
            <a href="{{categoryCountryUrl key}}" class="false list-group-item">{{name}}</a>
          {{/checkIf }}
				{{/each}}
			</div>
		</div> 

  </div>

  {{>paginationuniversity}}



</div>