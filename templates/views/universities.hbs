<div class="container">
  <h1>Universities</h1>
  <h4 class="text-weight-normal">Total {{ data.universities.total}} Universities.</h4>

  <form method="GET" action="/search/" role="search">
    <div class="input-group">
      <input type="text" class="form-control input-lg" placeholder="Search" name="q" id="q" value="{{data.searchQuery}}">
      <button class="btn btn-lg btn-primary" type="submit">Search</button>
    </div>
  </form>

  <div class="row">
    <div class="col-md-8 col-lg-8">
      <div class="row">
        {{!-- {{data.universities.results}} --}}
        {{#each data.universities.results}} 
        <div class="col-md-4 col-lg-4">
          {{!--
          <h1>{{universityUrl}}/{{filters.category}}/{{ slug }}</h1> --}} {{#if image}}
          <img src="{{{cloudinaryUrl image width=160 height=160 crop=" fit "}}}" class="img-responsive"> {{else}}
          <img src="/images/university_placeholder.png" class="img-responsive" width="100" style="border:1px solid #ccc;"> {{/if}}
          <h2>
            <a href="{{ universityUrl region.key country.key state.key city.key slug }}">{{name}}</a>
          </h2>
        </div>
        {{/each}}
      </div>
    </div>

    <div class="col-sm-4 col-md-3">
      <h2>By Country</h2>
      <div style="margin-top: 70px;" class="list-group">
        <a href="/universities" class="active list-group-item">All Countries</a>
        {{# each data.countries }} 
        {{!-- https://stackoverflow.com/questions/8853396/logical-operator-in-a-handlebars-js-if-conditional
        --}} {{!-- {{#checkIf countryCode '==' 'US' '||' countryCode '==' 'CA' }} --}}
        <a href="{{categoryCountryUrl key}}" class="false list-group-item">{{name}}</a>
        {{!-- {{/checkIf }} --}} {{/each}}
      </div>
    </div>

  </div>

  {{>paginationuniversity}}



</div>