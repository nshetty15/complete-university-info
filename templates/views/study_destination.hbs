<section class="search-filter">
  <div class="container">
    <div class="padding-tb search-intro">
      <h1>{{ data.destination.title }}</h1>
      <p>{{{ data.destination.brief }}}</p>

      <div>
        {{#if data.destination.image.version}}
        <img src="//res.cloudinary.com/uguide/image/upload/v{{data.destination.image.version}}/{{data.destination.image.public_id}}.jpg"
          alt="{{data.destination}}" class="img-fluid" /> {{else}}
        <img src="/images/university_placeholder.png" class="img-fluid" /> {{/if}}
      </div>

    </div>
  </div>
</section>

<section class="study-locations">
  <div class="container">
    <div class="row">

      <div>
        {{!-- <h2>About destination</h2> --}}
        {{{ data.destination.about }}}
      </div>

      <div>
        {{!-- <h2>Education system</h2> --}}
        {{{ data.destination.education }}}
      </div>

      <div>
        {{!-- <h2>Study Options</h2> --}}
        {{{ data.destination.options }}}
      </div>

      <div>
        {{!-- <h2>Cost of study &amp; living</h2> --}}
        {{{ data.destination.cost }}}
      </div>

      <div>
        {{!-- <h2>Visa Requirements</h2> --}}
        {{{ data.destination.visa }}}
      </div>

      <div>
        {{!-- <h2>Available Scholarships</h2> --}}
        {{{ data.destination.scholarships }}}
      </div>

      <div>
        <h2>fast facts</h2>
        <ul>
        {{# each data.destination.facts}}
        <li>{{  this}}</li>
        {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>