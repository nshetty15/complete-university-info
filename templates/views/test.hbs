<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <article>
        <p><a href="/tests">&larr; Back to Tests</a></p>
        <hr>
        <header>
          <h1>{{data.test.name}}</h1>
        </header>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            {{#if data.test.image}}
              <img src="{{cloudinaryUrl data.test.image crop='fit'}}" class="img-responsive">
            {{/if}}
          </div>
          <div class="col-md-6 col-lg-6">
            <ul class="list-group">
            </ul>
            <div class="well">
              {{{data.test.description}}}
            </div>
            <a class="btn btn-success btn-block" href="/contact">Ask About This Test</a>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>